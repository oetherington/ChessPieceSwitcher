{

  "description": "Switch pieces on lichess",
  "manifest_version": 2,
  "name": "LichessPieceSwitcher",
  "version": "1.0",
  "homepage_url": "https://github.com/oetherington/LichessPieceSwitcher",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "LichessPieceSwitcher",
    "default_popup": "popup/lps.html"
  }

}
